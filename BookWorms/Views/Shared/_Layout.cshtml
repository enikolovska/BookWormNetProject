<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (ViewBag.HideMenu == null || ViewBag.HideMenu == false)
    {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
            <div class="container">
                <a href="@Url.Action("Index", "Books")" style="text-decoration:none;">
                    <span style="font-style: italic;color:lightgrey; text-decoration:none;">Book</span>
                    <span style="font-weight: bold; color: lightgrey; text-decoration: none; ">Worm</span>
                    <span style="font-style: italic; font-weight: bold; color: lightgrey; text-decoration: none; ">Net</span>
                </a>

                <a href="@Url.Action("Index", "Books")">
                    <img src="~/Content/images/logo pink png.png" style="width:60px;" alt="Лого" />
                </a>


                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li>@Html.ActionLink("Библиотека", "Index", "Books", new { area = "" }, new { @class = "nav-link" })</li>

                        @if (User.IsInRole("User"))
                        {
                            <li>@Html.ActionLink("Книги кои ќе ги читам книги", "Index", "FutureBooks", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Прочитани книги", "Index", "ReadBooks", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    }
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Book WORM Net Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    
    </body>
</html>
