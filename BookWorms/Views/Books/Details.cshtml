@model BookWorms.Models.Book

@{
    ViewBag.Title = "Детали за книгата";
}

<h2 style="color: #2C3E50; font-size: 55px; font-family: 'Arial', sans-serif; text-align: center; margin-bottom: 30px;">
    Детали за книгата
</h2>

<div style="display: flex; justify-content: center; align-items: flex-start; gap: 20px; padding: 20px;">
    <div style="flex: 1; padding: 20px; border-radius: 8px; box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1); background-color: #e4f1ff;">
        <div class="form-group" style="margin-bottom: 20px;">
            <p style="font-size: 25px; font-weight: 500; color: #34495E;">@Html.DisplayNameFor(model => model.Title)</p>
            <p style="font-size: 18px; color: #34495E;">@Html.DisplayFor(model => model.Title)</p>
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <p style="font-size: 25px; font-weight: 500; color: #34495E;">@Html.DisplayNameFor(model => model.Author)</p>
            <p style="font-size: 18px; color: #34495E;">@Html.DisplayFor(model => model.Author)</p>
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <p style="font-size: 25px; font-weight: 500; color: #34495E;">@Html.DisplayNameFor(model => model.Genre)</p>
            <p style="font-size: 18px; color: #34495E;">@Html.DisplayFor(model => model.Genre)</p>
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <p style="font-size: 25px; font-weight: 500; color: #34495E;">@Html.DisplayNameFor(model => model.ReleaseDate)</p>
            <p style="font-size: 18px; color: #34495E;">@Html.DisplayFor(model => model.ReleaseDate)</p>
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <p style="font-size: 25px; font-weight: 500; color: #34495E;">@Html.DisplayNameFor(model => model.Publisher)</p>
            <p style="font-size: 18px; color: #34495E;">@Html.DisplayFor(model => model.Publisher)</p>
        </div>

        <div class="form-group" style="margin-top: 30px;">
            <p style="font-size: 25px; font-weight: 500; color: #34495E;">Содржина</p>
            <p style="font-size: 18px; color: #34495E;">@Html.DisplayFor(model => model.Content)</p>
        </div>
    </div>

    <div style="flex: 0 0 40%; text-align: center;">
        <img src="@Model.ImageUrl" alt="Image" style="width: 100%; height: auto; border-radius: 6px; box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);">
    </div>
</div>

<div style="text-align: center; margin-top: 30px;">
    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
    {
        @Html.ActionLink("Измени", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning", style = "padding: 10px 20px; font-size: 18px; border-radius: 6px; background-color: #ffcccb; border-color:#ffcccb; color: white;" })
    }
        @Html.ActionLink("Назад на листа", "Index", null, new { @class = "btn btn-secondary", style = "padding: 10px 20px; font-size: 18px; border-radius: 6px; background-color: #333333; color: white;" })
    </div>
