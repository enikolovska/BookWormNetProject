@model BookWorms.Models.RegisterViewModel

@{
    ViewBag.Title = "Регистрација";
    ViewBag.HideMenu = true;
}

<main aria-labelledby="title">
    <h2 id="title" style="color: #2C3E50; font-size: 45px; font-family: 'Arial', sans-serif; text-align: center; margin-bottom: 20px;">
        @ViewBag.Title
    </h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

<div style="max-width: 600px; margin: 0 auto; padding: 30px; border-radius: 8px; box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1); background-color: #e4f1ff;">


    @Html.ValidationSummary("", new { @class = "text-danger", style = "margin-bottom: 20px;" })

    <div class="form-group" style="margin-bottom: 20px;">
        Емаил
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Внеси емаил", @style = "font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px;" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        Лозинка
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Внеси лозинка", @style = "font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px;" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        Потврди лозинка
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Потврди лозинка", @style = "font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px;" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
    </div>

    <div style="text-align: center;">
        <input type="submit" value="Регистрирај се" class="btn btn-dark" style="width: 100%; padding: 15px; font-size: 18px; border-radius: 6px; margin-top: 20px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);" />
    </div>

    <p style="text-align: center; margin-top: 15px;">
        @Html.ActionLink("Постоечки корисник", "Login", null, new { @class = "btn green" })
    </p>
</div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .green {
        background: #ffcccb;
        color: #333;
        font-size: 18px;
        padding: 15px;
        border-radius: 6px;
        margin-top: 20px;
        text-decoration: none;
    }
</style>