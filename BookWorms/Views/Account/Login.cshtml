@model BookWorms.Models.LoginViewModel

@{
    ViewBag.Title = "Логирање";
    ViewBag.HideMenu = true;
}

<main aria-labelledby="title">
    <h2 id="title" style="color: #2C3E50; font-size: 45px; font-family: 'Arial', sans-serif; text-align: center; margin-bottom: 20px;">
        @ViewBag.Title
    </h2>

    <div class="d-flex justify-content-center">
        <div style="max-width: 600px; width: 100%; padding: 30px; border-radius: 8px; box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1); background-color: #e4f1ff;">

            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "margin-bottom: 20px;" })

                    <div class="form-group" style="margin-bottom: 20px;">
                        Емаил
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Внеси емаил", @style = "font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px;" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="margin-bottom: 20px;">
                        Лозинка
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Внеси лозинка", @style = "font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px;" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    @*<div class="form-group" style="display: flex; align-items: center; gap: 8px;">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @style = "transform: scale(1.2);" })
                        @Html.LabelFor(m => m.RememberMe, new { @style = "font-size: 18px; font-weight: 500; color: #34495E; cursor: pointer;" })
                    </div>*@

                    <div style="text-align: center;">
                        <input type="submit" value="Логирај се" class="btn btn-dark" style="width: 100%; padding: 15px; font-size: 18px; border-radius: 6px; margin-top: 20px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);" />
                    </div>

                    <p style="text-align: center; margin-top: 15px;">
                        @Html.ActionLink("Регистрирај се како нов корисник", "Register", null, new { @class = "btn green"})
                    </p>

                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p style="text-align: center;">
                            @Html.ActionLink("Forgot your password?", "ForgotPassword", null, new { @style = "color: #2980B9; font-size: 18px;" })
                        </p>
                    *@
                }
            </section>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .green {
        background: #ffcccb;
        color: #333;
        font-size: 18px;
        padding: 15px;
        border-radius: 6px;
        margin-top: 20px;
        text-decoration: none;
    }


</style>