@model BookWorms.Models.ReadBook

@{
    ViewBag.Title = "Delete ReadBook";
}

<h2 style="color: #2C3E50; font-size: 45px; font-family: 'Arial', sans-serif; text-align: center; margin-bottom: 30px;">
    Избриши Прочитана Книга
</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.BookId)

  
    <div style="display: flex; justify-content: center; align-items: center; min-height: 80vh;">
        <div style="width: 50%; padding: 30px; border-radius: 8px; box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1); background-color: #e4f1ff;">

            @if (Model.Book != null)
            {
                
                <div class="form-group" style="margin-bottom: 20px;">
                    <label style="font-size: 20px; font-weight: 500; color: #34495E;">Наслов на книга</label>
                    <input type="text" class="form-control" value="@Model.Book.Title" readonly style="font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px; background-color: #f2f2f2;" />
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label style="font-size: 20px; font-weight: 500; color: #34495E;">Автор на книга</label>
                    <input type="text" class="form-control" value="@Model.Book.Author" readonly style="font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px; background-color: #f2f2f2;" />
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label style="font-size: 20px; font-weight: 500; color: #34495E;">Жанр на книга</label>
                    <input type="text" class="form-control" value="@Model.Book.Genre" readonly style="font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px; background-color: #f2f2f2;" />
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label style="font-size: 20px; font-weight: 500; color: #34495E;">URL на слика</label>
                    <input type="text" class="form-control" value="@Model.Book.ImageUrl" readonly style="font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px; background-color: #f2f2f2;" />
                </div>
            }
            else
            {
                <div class="alert alert-danger">Книгата не е најдена!</div>
            }

            
            <div class="form-group" style="margin-bottom: 20px;">
                <label style="font-size: 20px; font-weight: 500; color: #34495E;">Оценка</label>
                <input type="text" class="form-control" value="@Model.Rating" readonly style="font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px; background-color: #f2f2f2;" />
            </div>

            
            <div class="form-group" style="margin-bottom: 20px;">
                <label style="font-size: 20px; font-weight: 500; color: #34495E;">Коментар</label>
                <input type="text" class="form-control" value="@Model.Comment" readonly style="font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px; background-color: #f2f2f2;" />
            </div>

            
            <div class="form-group" style="margin-bottom: 20px;">
                <label style="font-size: 20px; font-weight: 500; color: #34495E;">Датум на читање</label>
                <input type="text" class="form-control" value="@Model.ReadDate.ToString("yyyy-MM-dd")" readonly style="font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px; background-color: #f2f2f2;" />
            </div>

           
            <div class="form-group" style="margin-bottom: 20px;">
                <label style="font-size: 20px; font-weight: 500; color: #34495E;">Тип на книга</label>
                <input type="text" class="form-control" value="@Model.Type" readonly style="font-size: 18px; padding: 10px 15px; border-radius: 6px; margin-top: 8px; background-color: #f2f2f2;" />
            </div>

           
            <button type="submit" class="btn btn-danger" style="width: 100%; padding: 15px; font-size: 18px; border-radius: 6px; background-color: #333333; color: white; border: none; margin-top: 20px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);">
                Избриши
            </button>


            <a href="@Url.Action("Index", "ReadBooks")" class="btn btn-secondary" style="width: 100%; padding: 15px; font-size: 18px; border-radius: 6px; margin-top: 10px; background-color: #ffcccb; border-color: #ffcccb; ">
                Назад на листата
            </a>
        </div>
    </div>
}



